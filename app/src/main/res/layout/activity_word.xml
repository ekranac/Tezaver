<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/size_0"
        android:layout_weight="0.5"
        android:layout_marginLeft="@dimen/size_10">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_70"
            android:textColor="@color/dark_blue"
            android:id="@+id/tv_word"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_word"
            android:textSize="@dimen/font_40"
            android:textColor="@color/gray"
            android:id="@+id/tv_pronunciation"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/size_0"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        
        <LinearLayout
            android:layout_width="@dimen/size_0"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/list_synonyms"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_synonyms"
                android:gravity="center"
                android:textSize="@dimen/font_20"
                android:id="@+id/synonyms_empty"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/size_0"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/list_antonyms"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_antonyms"
                android:gravity="center"
                android:textSize="@dimen/font_20"
                android:id="@+id/antonyms_empty"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>